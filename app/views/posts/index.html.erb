<div class="page-container">
  <div class="row">
    <div class="col l6 m12 s12 offset-l3">
      <br>
      <h4 class="center">Blog</h4>
      
      <div class="center green-text">
        <% if notice %>
          <%= notice %>
          <br><br>
        <% end %>
      </div>

      <% if @posts.count > 0 %>
        <% @posts.each do |post| %>
          <p>
            <a href="/posts/<%= post.id %>" class="headline"><%= post.title %></a>
            <br>
            <i><%= post.created_at.strftime("%m/%d/%Y") %></i>
          </p>

          <p>
            <%= sanitize(post.body).first(550) %>
            <% if post.body.length > 550 %>
              ... <a href="/posts/<%= post.id %>">Read more</a>
            <% end %>
          </p>
          <hr>
        <% end %>
      <% else %>
        <br>
        There are no posts yet.
      <% end %>

    </div>
  </div>
</div>
