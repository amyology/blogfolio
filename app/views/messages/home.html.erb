<%= link_to image_tag('https://s3-us-west-2.amazonaws.com/blogfolio/down.png'), '#about', class: 'arrowdown animated bounce', onclick: 'disappear()' %>

<%= link_to image_tag('https://s3-us-west-2.amazonaws.com/blogfolio/up.png'), '#scrolltop', class: 'arrowup invisible' %>

<div class="parallax-container valign-wrapper landing">
  <div class="section no-pad-bot">
    <div class="container scrollspy" id="about">
      <div class="center border-div animated slideInDown">
        <span class="border-box">a.chan</span>
      </div>
      <div class="row center">
        <div class="center border-div">
          <div style="margin: 7px" class="animated slideInUp">
            <span class="black-box">Web Developer</span>
          </div>
        </div>
      </div>

    </div>
  </div>
  <div class="parallax"><%= image_tag 'https://s3-us-west-2.amazonaws.com/blogfolio/bg1.jpg' %></div>
</div>

<div class="container content-section">
  <div class="section">
    <div class="row">
      <div class="col l3 m3"></div>
      <div class="col l6 m6 s12">
        <h5 class="show-name invisible center">Hi! My name is Amy Chan.</h5>
        <%= image_tag 'me.png', class: 'circle responsive-img circle-text show-pic invisible', alt: 'this is me' %>
        <div class="show-bio invisible"> <br>
          I am a full-stack developer based in Chicago. I am a web developer/designer at heart who took a brief detour to go to law school, learned some valuable skills while I was there, and am now back to doing what I love.
        </div>
      </div>
      <div class="col l3 m3"></div>
    </div>
  </div>
</div>


<div class="parallax-container valign-wrapper">
  <div class="section no-pad-bot scrollspy" id="resume">
    <div class="container">
      <div class="row center">
        <div class="center border-div"><span class="smaller-box">Resume</span></div>
      </div>
      <br><br>

    </div>
  </div>
  <div class="parallax"><%= image_tag 'https://s3-us-west-2.amazonaws.com/blogfolio/bg2.jpg' %></div>
</div>

<div class="container content-section">
  <div class="section">
    <h5 class="center show-skills invisible">Skills</h5>
    <div class="row">
      <div class="col m3 l3"></div>
      <div class="col s12 m6 l6">
        <ul class="show-list invisible">
        <% skills.each do |skill| %>
          <div class="col s6 m4 l3"><li><%= skill %></li></div>
        <% end %>
        </ul>
      </div>
      <div class="col m3 l3"></div>
    </div>
    <div class="center show-contact invisible"><a href="#contact">Contact</a> me for a copy of my resume.</div>
  </div>
</div>


<div class="parallax-container valign-wrapper">
  <div class="section no-pad-bot scrollspy" id="portfolio">
    <div class="container">
      <div class="row center">
        <div class="center border-div"><span class="smaller-box">Portfolio</span></div>
      </div>
    </div>
  </div>
  <div class="parallax"><%= image_tag 'https://s3-us-west-2.amazonaws.com/blogfolio/bg3.jpg' %></div>
</div>

<div class="container content-section">
  <div class="section">
    <div class="row">
      <div class="col s12 m4">
        <div class="icon-block project1 invisible">
          <h5 class="center">ColorCrush</h5>
          <p><%= image_tag 'https://s3-us-west-2.amazonaws.com/blogfolio/colorcrush-thumb.png', class: 'responsive-img thumb' %>
          <p style="text-align: center">
            <%= link_to 'Demo', 'http://color-crush.herokuapp.com' %> |
            <%= link_to 'Code', 'https://github.com/amyology/colorcrush' %>
          </p>
        </div>
      </div>

      <div class="col s12 m4">
        <div class="icon-block project2 invisible">
          <h5 class="center"> </h5>

          <p class="light"> </p>
        </div>
      </div>

      <div class="col s12 m4">
        <div class="icon-block project3 invisible">
          <h5 class="center"> </h5>

          <p class="light"> </p>
        </div>
      </div>
    </div>

  </div>
</div>


<div class="parallax-container valign-wrapper">
  <div class="section no-pad-bot scrollspy" id="contact">
    <div class="container">
      <div class="row center">
        <div class="center border-div"><span class="smaller-box">Contact</span></div>
      </div>
    </div>
  </div>
  <div class="parallax"><%= image_tag 'https://s3-us-west-2.amazonaws.com/blogfolio/bg4.jpg' %></div>
</div>

<div class="container" style="padding-top: 1em">
  <div class="row">
    <div class="col l6 s12">
      <h5 class="show-form-header invisible">Contact Me</h5>
      <br>
      <div class="show-form invisible">
      <%= form_tag '/messages', method: :post do %>
        
        <div class="input-field">
          <i class="material-icons prefix">perm_identity</i>
          <%= label_tag :name %>
          <%= text_field_tag :name, nil, class: 'validate' %><br>
        </div>

        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <%= label_tag :email %>
          <%= text_field_tag :email, nil, class: 'validate' %><br>
        </div>

        <div class="input-field">
          <i class="material-icons prefix">subject</i>
          <%= label_tag :subject %>
          <%= text_field_tag :subject, nil, class: 'validate' %><br>
        </div>

        <div class="input-field">
          <i class="material-icons prefix">mode_edit</i>
          <%= label_tag :message %>
          <%= text_area_tag :message, nil, class: 'materialize-textarea validate' %><br>
        </div>
        
        <%= button_tag(type: 'submit', class: 'waves-effect waves-light btn-large') do %> 
          Send <i class="material-icons right">send</i>
        <% end %>
      <% end %><br>

    </div>
    </div>
    <div class="col l1"></div>
    <div class="col l5 s12">
      <h5 class="show-link-header invisible">Find Me</h5>
      <ul class="show-link invisible">
        <li><%= link_to 'http://github.com/amyology' do %>
          <i class="fa fa-github" aria-hidden="true"></i> GitHub
        <% end %></li>
        <li><%= link_to 'https://www.linkedin.com/in/amy-chan' do %>
          <i class="fa fa-linkedin-square" aria-hidden="true"></i> LinkedIn</a>
        <% end %></li>
      </ul>
    </div>
  </div>
</div>